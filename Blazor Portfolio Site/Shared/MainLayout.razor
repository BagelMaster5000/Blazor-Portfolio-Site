@inherits LayoutComponentBase

<PageTitle>
    Sammy Mahmoudi
</PageTitle>

<Layout>
    <LayoutHeader Padding="Padding.Is2">
        <Heading Size="HeadingSize.Is1" TextAlignment="TextAlignment.Center">
            Sammy Mahmoudi
        </Heading>
        <Heading Size="HeadingSize.Is3" TextAlignment="TextAlignment.Center">
            Programming & Games Portfolio
        </Heading>
    </LayoutHeader>
    <Container TextAlignment="TextAlignment.Center">
        <NavMenu/>
    </Container>
		<article class="@GetCurPageClassName()">
            <Container Padding="Padding.Is3">
		    	@Body
            </Container>
		</article>
</Layout>

@code {
    public string GetCurPageClassName() {
        switch (GlobalVariables.CurPageName) {
            case "Home": return "home-class";
            case "Games": return "games-class";
            case "Other": return "other-class";
            case "Resume": return "resume-class";
            case "About": return "about-class";
            case "Contact": return "contact-class";
            default: return "base-class";
        }
    }
}

